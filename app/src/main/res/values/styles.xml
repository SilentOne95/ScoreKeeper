<resources>
    <!-- Logo images -->
    <style name="logo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/logo_size</item>
        <item name="android:padding">@dimen/logo_padding</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Buttons -->
    <style name="defaultButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="buttonLeftColumn" parent="defaultButton">
        <item name="android:layout_marginStart">@dimen/left_button_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/left_button_margin_end</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>
    <style name="buttonRightColumn" parent="defaultButton">
        <item name="android:layout_marginStart">@dimen/right_button_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/right_button_margin_end</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>
    <style name="resetButton" parent="defaultButton">
        <item name="android:layout_marginTop">@dimen/reset_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/reset_margin_bottom</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!-- TextViews -->
    <style name="defaultTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_score</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="textViewLeftColumn" parent="defaultTextView">
        <item name="android:layout_marginStart">@dimen/left_text_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/left_text_margin_end</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>
    <style name="textViewRightColumn" parent="defaultTextView">
        <item name="android:layout_marginStart">@dimen/right_text_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/right_text_margin_end</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="layoutRows">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/layout_rows_padding</item>
        <item name="android:paddingBottom">@dimen/layout_rows_padding</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
